{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/components/infsh/agent/*": [
        "./registry/blocks/agent/*",
        "./registry/blocks/chat/components/*",
        "./registry/blocks/tools/*",
        "./registry/blocks/widgets/*"
      ],
      "@/components/infsh/agent/widget-types": ["./registry/blocks/widgets/types"],
      "@/components/infsh/task/*": ["./registry/blocks/task/*"],
      "@/components/infsh/code-block/*": ["./registry/blocks/code-block/*", "./registry/blocks/code-block/lib/*"],
      "@/components/infsh/markdown-renderer": ["./registry/blocks/markdown/markdown-renderer"],
      "@/components/infsh/zoomable-image": ["./registry/blocks/zoomable-image/zoomable-image"],
      "@/components/infsh/youtube-embed": ["./registry/blocks/youtube-embed/youtube-embed"],
      "@/hooks/use-task": ["./registry/blocks/task/use-task"],
      "@/hooks/use-auto-scroll": ["./registry/blocks/chat/lib/use-auto-scroll"],
      "@/lib/markdown-helpers": ["./registry/blocks/markdown/lib/helpers"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
